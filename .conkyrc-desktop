# Use Xft?
use_xft yes
xftfont DejaVu Sans:size=8
xftalpha 0.8
text_buffer_size 2048

# Update interval in seconds
update_interval 1

# This is the number of times Conky will update before quitting.
# Set to zero to run forever.
total_run_times 0


# Use double buffering (reduces flicker, may not work for everyone)
double_buffer yes

# Minimum size of text area
minimum_size 230 0
maximum_width 230

# Draw shades?
draw_shades no

# Draw outlines?
draw_outline no


# BORDERS
# Draw borders around text
draw_borders no

# Stippled borders?
stippled_borders 0

# border margins
border_inner_margin 20

# border width
border_width 1

# Default colors and also border colors
default_color lightgrey
own_window_colour white

# Text alignment, other possible values are commented
alignment middle_right

# Gap between borders of screen and text
# same thing as passing -x at command line
gap_x 50
gap_y 0

# Subtract file system buffers from used memory?
no_buffers yes

# set to yes if you want all text to be in uppercase
uppercase no

# number of cpu samples to average
# set to 1 to disable averaging
cpu_avg_samples 2

# number of net samples to average
# set to 1 to disable averaging
net_avg_samples 2

# Force UTF8? note that UTF8 support required XFT
override_utf8_locale yes

# Add spaces to keep things from moving about?  This only affects certain objects.
use_spacer none


# WINDOW
# Create own window instead of using desktop (required in nautilus)
own_window yes

# If own_window is yes, you may use type normal, desktop or override
own_window_type override
#own_window_type desktop

# Use pseudo transparency with own_window?
own_window_transparent yes

# Window color (if own_window_transparent is set to no)
#own_window_colour 242520

own_window_hints undecorated,below,sticky,skip_taskbar,skip_pager

default_bar_size 40 15

lua_load ~/.conky_bg.lua
lua_draw_hook_pre draw_bg

TEXT

SYSTEM ${hr 2}
${font OpenLogos:size=24}u${font} 
${voffset -22}${alignr}kernel:  ${kernel}${voffset 10}
#
CPU: ${cpu cpu0}% ${alignr}${cpubar 5,130 cpu0}
# To make the following work, you need to do :
# sudo modprobe coretemp
# edit /etc/modules and add the line 'coretemp'
# sudo apt-get install lm-sensors
${alignr}${exec sensors | grep Physical | grep -Eo "[[:digit:]]+\.[[:digit:]]°C" | head -n 1}

    Core1: ${exec sensors | grep -i "core 0": | grep -Eo "[[:digit:]]+\.[[:digit:]]°C" | head -n 1} - ${cpu cpu1}% #
${voffset -7}${alignr}${cpugraph cpu1 20,90 000000 ffffff}${voffset 7}
    Core2: ${exec sensors | grep -i "core 1": | grep -Eo "[[:digit:]]+\.[[:digit:]]°C" | head -n 1} - ${cpu cpu2}% #
${voffset -7}${alignr}${cpugraph cpu2 20,90 000000 ffffff}${voffset 7}
    Core3: ${exec sensors | grep -i "core 2": | grep -Eo "[[:digit:]]+\.[[:digit:]]°C" | head -n 1} - ${cpu cpu2}% #
${voffset -7}${alignr}${cpugraph cpu3 20,90 000000 ffffff}${voffset 7}
    Core4: ${exec sensors | grep -i "core 3": | grep -Eo "[[:digit:]]+\.[[:digit:]]°C" | head -n 1} - ${cpu cpu3}% #
${voffset -7}${alignr}${cpugraph cpu4 20,90 000000 ffffff}${voffset 7}


RAM: $memperc% ${alignr}${membar 10,130}
${alignr}${mem}/${memmax}
GPU: ${nvidia temp}°C
    GPU freq.: ${alignr}${nvidia gpufreq} MHz
    Mem freq.: ${alignr}${nvidia memfreq} MHz
    Driver version: ${alignr}${exec nvidia-settings -q  NvidiaDriverVersion | grep Version | sed 's/^.*:\ //'}


HD ${hr 2}

    ${alignr}Trash: ${exec du -ch ~/.local/share/Trash/files/ | grep total | sed 's/\t.*//'}
    Root:${alignr}${fs_bar 4,140 /root}
${alignr}${fs_used /root}/${fs_size /root}

    Data:${alignr}${fs_bar 4,140 /media/DATA}
${alignr}${fs_used /media/DATA}/${fs_size /media/DATA}

NETWORK ${hr 2}

    Local IP address: ${alignr}${addr eth0}

    Up: ${upspeed eth0} ${voffset -8}${alignr}${upspeedgraph eth0 20,80 000000 ffffff}
        
    Down: ${downspeed eth0} ${voffset -8}${alignr}${downspeedgraph eth0 20,80 000000 ffffff}

PROCESSES ${hr 2}

    > CPU ${goto 165} mem${alignr}cpu 
    ${color 88aadd}${top name 1}${goto 125}${top pid 1}${goto 165}${top mem 1} ${alignr}${top cpu 1}
    ${color lightgrey}${top name 2}${goto 125}${top pid 2}${goto 165}${top mem 2} ${alignr}${top cpu 2}
    ${color lightgrey}${top name 3}${goto 125}${top pid 3}${goto 165}${top mem 3} ${alignr}${top cpu 3}
    ${color lightgrey}${top name 4}${goto 125}${top pid 4}${goto 165}${top mem 4} ${alignr}${top cpu 4}

    > MEM
    ${color 88aadd}${top_mem name 1}${goto 125}${top_mem pid 1}${goto 165}${top_mem mem 1} ${alignr}${top_mem cpu 1}
    ${color lightgrey}${top_mem name 2}${goto 125}${top_mem pid 2}${goto 165}${top_mem mem 2} ${alignr}${top_mem cpu 2}
    ${color lightgrey}${top_mem name 3}${goto 125}${top_mem pid 3}${goto 165}${top_mem mem 3} ${alignr}${top_mem cpu 3}
    ${color lightgrey}${top_mem name 4}${goto 125}${top_mem pid 4}${goto 165}${top_mem mem 4} ${alignr}${top_mem cpu 4}


DATE ${hr 2}
${font DejaVu Sans:size=26}${alignr}${time %H:%M}${font}
${font DejaVu Sans:size=12}${alignr}${time %a %b %d %Y}${font}

