NETWORK ${hr 2}
    eth0 : ${alignr}${addr eth0}
    Up: ${offset 24}${upspeedgraph eth0 18,55 000000 ffffff} #
    ${alignr}Down:     ${downspeedgraph eth0 18,55 000000 ffffff}
    ${voffset -18}${upspeed eth0}${goto 142}${downspeed eth0} 

    wlan0 (${wireless_essid wlan0} ${wireless_link_bar 4,20 wlan0} ) : ${alignr}${addr wlan0}
    Up: ${offset 24}${upspeedgraph wlan0 18,55 000000 ffffff} #
    ${alignr}Down:     ${downspeedgraph wlan0 18,55 000000 ffffff}
    ${voffset -18}${upspeed wlan0}${goto 142}${downspeed wlan0} 

PROCESSES ${hr 2}
    ${goto 165} mem${alignr}cpu 
    ${color 88aadd}${top name 1}${goto 125}${top pid 1}${goto 165}${top mem 1} ${alignr}${top cpu 1}${color lightgrey}
    ${top name 2}${goto 125}${top pid 2}${goto 165}${top mem 2} ${alignr}${top cpu 2}
