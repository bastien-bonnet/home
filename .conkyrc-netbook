    ${font OpenLogos:size=24}u${font} 
${voffset -22}${alignr}kernel:  ${kernel}${voffset 10}
#
    CPU: ${cpu cpu0}% ${alignr}${cpubar 5,120 cpu0}
${alignr}${exec sensors | grep 1: | sed 's/.*\ \ +//' | sed 's/C\ *(.*$//'}

        Core1: ${cpu cpu1}% #${alignr}${cpubar 5,100 cpu1}
${voffset -7}${alignr}${cpugraph cpu1 20,90 000000 ffffff}${voffset 7}
        ${voffset -6}Core2: ${cpu cpu2}% #${alignr}${cpubar 5,100 cpu2}
${voffset -10}${alignr}${cpugraph cpu1 20,90 000000 ffffff}${voffset 0}

    RAM: $memperc% ${alignr}${membar 10,120}
