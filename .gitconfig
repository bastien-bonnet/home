[user]
	name = bbonnet
	email = none
[push]
	default = simple
[color]
	ui = auto
[alias]
	co = checkout
	b = branch
	ci = commit
	st = status
	lg = log --graph --format='%C(yellow)%h%Creset %cr %C(blue)%<(5,trunc)%cn%Creset -%C(auto)%d%Creset %<(80,trunc)%s'
	lga = log --graph --format='%C(yellow)%h%Creset %cr %C(blue)%<(5,trunc)%cn%Creset -%C(auto)%d%Creset %<(80,trunc)%s' --all
	lgd = log --graph --format='%C(yellow)%h%Creset %cd %C(blue)%<(5,trunc)%cn%Creset -%C(auto)%d%Creset %<(80,trunc)%s' --date=short
	l = log --graph --format='%C(yellow)%h%Creset %cr %C(blue)%<(5,trunc)%cn%Creset -%C(auto)%d%Creset %<(80,trunc)%s' --name-status
	la = log --graph --format='%C(yellow)%h%Creset %cr %C(blue)%<(5,trunc)%cn%Creset -%C(auto)%d%Creset %<(80,trunc)%s' --name-status --all
	sw = update-index --skip-worktree
	nsw = update-index --no-skip-worktree
	assume = !git ls-files -v | grep \"^h\\|^S\"
	diffm = diff --unified=0 --ignore-space-at-eol --color-words="[^[:space:],\\'\\\"\\<\\>]+|[[:space:],\\'\\\"\\<\\>]+"
[core]
	pager = less -r
[difftool]
	prompt = false
