[user]
	name = bbonnet
	email = none
[push]
	default = simple
[color]
	ui = auto
[alias]
	co = checkout
	b = branch
	s = status
	a = add
	ci = commit
	p = push

	# minimal word diff
	d = diff --unified=0 --ignore-space-at-eol --color-words='[[:alnum:]]+|[^[:space:]]'
	dc = diff --unified=0 --ignore-space-at-eol --color-words='[[:alnum:]]+|[^[:space:]]' --cached
	dh = diff --unified=0 --ignore-space-at-eol --color-words='[[:alnum:]]+|[^[:space:]]' HEAD^!

	pullr = pull --rebase=preserve

	#### LOGS #############################
	# oneline log aliases with graph, relative date, short hash, short committer id, truncated comment

	# current branch
	lg = log --graph --format='%C(yellow)%h%Creset %cr %C(blue)%<(7,trunc)%cn%Creset -%C(auto)%d%Creset %s'

	# all branches
	lga = log --graph --format='%C(yellow)%h%Creset %cr %C(blue)%<(7,trunc)%cn%Creset -%C(auto)%d%Creset %s' --all

	# current branch, file stats
	l = log --graph --format='%C(yellow)%h%Creset %cr %C(blue)%<(7,trunc)%cn%Creset -%C(auto)%d%Creset %s' --name-status

	# all branches, file stats
	la = log --graph --format='%C(yellow)%h%Creset %cr %C(blue)%<(7,trunc)%cn%Creset -%C(auto)%d%Creset %s' --name-status --all

	# current branch, absolute date
	lgd = log --graph --format='%C(yellow)%h%Creset %ci %C(blue)%<(7,trunc)%cn%Creset -%C(auto)%d%Creset %s' --date=short

	##### END LOGS ############################

[core]
	pager = less -R
[difftool]
	prompt = false
[diff]
	tool = meld
[merge]
	tool = meld
[mergetool]
	keepBackup = false
