[user]
	name = bbonnet
	email = none
[push]
	default = simple
[color]
	ui = auto
[alias]
	co = checkout
	b = branch
	ci = commit
	st = status

	#### LOGS #############################
	# oneline log aliases with graph, relative dates date, short hash, short committer id, truncated comment

	# current branch
	lg = log --graph --format='%C(yellow)%h%Creset %cr %C(blue)%<(7,trunc)%cn%Creset -%C(auto)%d%Creset %s'

	# all branches
	lga = log --graph --format='%C(yellow)%h%Creset %cr %C(blue)%<(7,trunc)%cn%Creset -%C(auto)%d%Creset %s' --all

	# current branch, file stats
	l = log --graph --format='%C(yellow)%h%Creset %cr %C(blue)%<(7,trunc)%cn%Creset -%C(auto)%d%Creset %s' --name-status

	# all branches, file stats
	la = log --graph --format='%C(yellow)%h%Creset %cr %C(blue)%<(7,trunc)%cn%Creset -%C(auto)%d%Creset %s' --name-status --all

	# current branch, absolute date
	lgd = log --graph --format='%C(yellow)%h%Creset %ci %C(blue)%<(7,trunc)%cn%Creset -%C(auto)%d%Creset %<(80,trunc)%s' --date=short

	##### END LOGS ############################

	# minimal word diff
	diffm = diff --unified=0 --ignore-space-at-eol --color-words='[[:alnum:]]+|[^[:space:]]'

	sw = update-index --skip-worktree
	nsw = update-index --no-skip-worktree
	assume = !git ls-files -v | grep \"^h\\|^S\"
	pullr = pull --rebase=preserve
[core]
	pager = less -R
[difftool]
	prompt = false
[diff]
	tool = meld
[merge]
	tool = meld
[mergetool]
	keepBackup = false
